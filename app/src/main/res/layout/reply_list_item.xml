<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/sage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="本串已被sage"
        android:textColor="#B9FF0F0F"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replyCookie" />

    <TextView
        android:id="@+id/replyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23333333"
        android:textAppearance="@style/ContentBarText"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/replyCookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rdsfgag"
        android:textAppearance="@style/ContentBarText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/replyQuotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />

    <TextView
        android:id="@+id/replyContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="测试测试测试"
        android:textColor="@color/mainContentTextColor"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replyQuotes" />

    <TextView
        android:id="@+id/replyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2/7 23:23:12"
        android:textAppearance="@style/ContentBarText"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/replyCookie"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/replyTitleAndName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题：哈哈哈\n作者：咩咩咩"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sage" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="replyCookie,sage,replyTitleAndName"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="731dp" />

    <TextView
        android:id="@+id/replyIdSuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No."
        android:textAppearance="@style/ContentBarText"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/replyId"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/replyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replyContent"
        app:srcCompat="@mipmap/ic_launcher" />

    <View
        android:id="@+id/bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/replyImage"
        tools:layout_editor_absoluteX="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

