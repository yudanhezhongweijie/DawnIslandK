    <Button
        android:id="@+id/postCookie"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="没有饼干"
        android:textAppearance="@style/CollSubTitle"
        android:textSize="18sp"
        app:strokeWidth="0dp"
        app:icon="@drawable/ic_arrow_drop_down_black_24dp"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/postSend"
        app:layout_constraintEnd_toStartOf="@+id/postSend"
        app:layout_constraintTop_toTopOf="@+id/postSend" />

    <Button
        android:id="@+id/postSend"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:icon="@drawable/ic_send_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        app:strokeWidth="0dp" />

    <EditText
        android:id="@+id/postContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="在这里输入文字"
        android:background="#EAEAEA"
        android:ems="10"
        android:gravity="clip_horizontal"
        android:hint="在这里输入文字"
        android:inputType="textMultiLine"
        android:minLines="20"
        android:padding="6dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleContainer" />

    <LinearLayout
        android:id="@+id/toggleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/postContent"
        app:layout_constraintEnd_toEndOf="@id/postContent"
        app:layout_constraintStart_toStartOf="@id/postContent"
        app:layout_constraintTop_toBottomOf="@id/postCookie">

        <LinearLayout
            android:id="@+id/expansionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/spart_line_1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="8dp"
                android:background="#9F9F9F"
                android:visibility="visible" />

            <EditText
                android:id="@+id/formTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="标题"
                android:inputType="none"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:id="@+id/spart_line_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="8dp"
                android:background="#9F9F9F"
                android:visibility="visible" />

            <EditText
                android:id="@+id/formEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="邮箱"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:id="@+id/spart_line_3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="8dp"
                android:background="#9F9F9F"
                android:visibility="visible" />

            <EditText
                android:id="@+id/formName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"

                android:background="@null"
                android:ems="10"
                android:hint="名称"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:id="@+id/spart_line_4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9F9F9F"
                android:visibility="visible" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/facesContainer"
                style="@style/Theme.MaterialComponents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:alignContent="stretch"
                app:alignItems="stretch"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="space_evenly" />
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/attachmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/postCamera"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="拍照"
                app:icon="@drawable/ic_photo_camera_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/postImage"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="照片"
                app:icon="@drawable/ic_image_black_24dp"
                app:layout_constraintStart_toEndOf="@id/postCamera"
                app:layout_constraintTop_toTopOf="@id/postCamera"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/postDoodle"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="涂鸦"
                app:icon="@drawable/ic_brush_black_24px"
                app:layout_constraintStart_toEndOf="@id/postImage"
                app:layout_constraintTop_toTopOf="@id/postCamera"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/postLuwei"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="芦苇娘"
                app:icon="@drawable/ic_speaker_black_24dp"
                app:layout_constraintStart_toEndOf="@id/postDoodle"
                app:layout_constraintTop_toTopOf="@id/postCamera"
                app:strokeWidth="0dp" />

            <CheckBox
                android:id="@+id/postWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="水印"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postLuwei" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/postPhotoPreview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postCamera"
                app:srcCompat="@drawable/drawer_head" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>