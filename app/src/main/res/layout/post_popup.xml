<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:background="@drawable/top_round_corner_background"
    android:elevation="5dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/postTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="回复 No.12345678"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/postForum"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="选择板块"
        android:textAppearance="@style/CollSubTitle"
        android:textSize="18sp"
        app:icon="@drawable/ic_arrow_drop_down_black_24dp"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/postTitle"
        app:layout_constraintStart_toEndOf="@id/postTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/postContent"
        app:layout_constraintTop_toBottomOf="@id/postTitle"
        app:singleSelection="true">

        <Button
            android:id="@+id/postExpand"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_unfold_more_black_24dp"
            app:layout_constraintStart_toStartOf="@id/postContent"
            app:layout_constraintTop_toBottomOf="@id/postTitle"
            app:strokeWidth="0dp" />

        <Button
            android:id="@+id/postAttachment"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:icon="@drawable/ic_attachment_black_24dp"
            app:layout_constraintStart_toEndOf="@+id/postExpand"
            app:layout_constraintTop_toTopOf="@+id/postExpand"
            app:strokeWidth="0dp" />

        <Button
            android:id="@+id/postFace"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:icon="@drawable/ic_emoji_emotions_black_24dp"
            app:layout_constraintStart_toEndOf="@+id/postAttachment"
            app:layout_constraintTop_toTopOf="@+id/postAttachment"
            app:strokeWidth="0dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

